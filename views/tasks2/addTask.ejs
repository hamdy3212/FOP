<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<!-- Form -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mt-5 offset-md-3">
            <form action="/tasks/addtask" method="POST">
                <div class="form-group">
                    <label for="task">Task Name</label>
                    <input type="text" class="form-control" id="task" name="title" placeholder="Example:  الاستمارات"
                        required>
                </div>
                <div class="form-group">
                    <label for="assignee">To who?</label>
                    <select multiple class="form-control" name="assignee" id="assignee" required>
                        <% for(let user of users){ %>
                        <option><%= user.username %></option>
                        <%}%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="task-description">Task Description</label>
                    <textarea class="form-control" id="task-description" name="description" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="deadline">Deadline</label>
                    <input type="date" id="deadline" name="deadline" value="2020-12-01" min="2020"
                        max="2030"> </div>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End of form -->


