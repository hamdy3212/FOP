<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-3 mt-5">
            <%- include('../partials/right-nav.ejs') %>
        </div>
        <!-- Form -->
        <div class="col-md-7 my-5 card shadow pt-3">
                    <form action="/tasks/newtask" method="POST" >
                        <div class="form-group">
                            <label for="task">اسم المهمة</label>
                            <input type="text" class="form-control" id="task" name="title"
                                placeholder="مثال:  الاستمارات" required>
                        </div>
                        <div class="form-group">
                            <label for="assignee">الى من؟</label>
                            <select class="form-control" name="assignee" id="assignee" required>
                                <% for(let user of users){ %>
                                <option><%= user.username %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="task-description">تفاصيل المهمة</label>
                            <textarea class="form-control" id="task-description" name="description" rows="3"
                                required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="deadline">الموعد النهائي</label>
                            <input type="date" id="deadline" style="text-align: right; " name="deadline" min="2020" max="2030">
                        </div>
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <button type="submit" class="btn btn-lg btn-primary btn-block">ارسال</button>
                            </div>
                        </div>
                    </form>
        </div>
        <!-- End of form -->
        <div class="col-md-2 my-5">
            <%- include('../partials/left-nav.ejs') %>
        </div>
    </div>
</div>



<script>
    document.getElementById("newTaskButton").classList.add("active");
</script>
<%- include('../partials/footer.ejs') %>